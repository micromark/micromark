{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ESNEXT", "DOM", "DOM.Iterable", "ScriptHost"],
    "sourceMap": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "project": "./",
    "outDir": "./built",

    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["bin/**/*", "lib/**/*"]
}
