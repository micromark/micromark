{
  "compilerOptions": {
    "lib": ["es2018"],

    "sourceMap": true,
    "resolveJsonModule": true,
    "project": "./",

    "strict": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "importHelpers": true
  },
  "include": ["bin/**/*", "lib/**/*"],
  "exclude": ["node_modules", "built/**", "**/__tests__/*"]
}
